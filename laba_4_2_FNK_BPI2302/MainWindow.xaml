<Window x:Class="laba_4_2_FNK_BPI2302.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba_4_2_FNK_BPI2302"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{StaticResource LightBrush}">

        <!-- Верхнее меню -->
        <Menu VerticalAlignment="Top" Margin="0,0,0,2" 
              Effect="{DynamicResource MenuShadow}">
            <MenuItem Header="Сотрудники" Click="Employee_OnClick"/>
            <MenuItem Header="Должности" Click="Role_OnClick"/>
        </Menu>

        <!-- Центральный текст -->
        <Border CornerRadius="10" Padding="15" 
                Background="White" 
                Effect="{DynamicResource CardShadow}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <TextBlock Text="Выберите пункт меню для работы с данными" 
                       Foreground="{StaticResource PrimaryBrush}"
                       FontSize="15" FontWeight="SemiBold"
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>
