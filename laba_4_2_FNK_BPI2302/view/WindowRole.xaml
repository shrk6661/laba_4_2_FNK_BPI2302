<Window x:Class="laba_4_2_FNK_BPI2302.view.WindowRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba_4_2_FNK_BPI2302.view"
        mc:Ignorable="d"
        Title="Должности"
        Height="420" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource LightBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🏷 Заголовок -->
        <Label Grid.Row="0"
               Content="Список должностей сотрудников"
               HorizontalAlignment="Center"
               FontSize="17"
               FontWeight="Bold"
               Foreground="{StaticResource PrimaryBrush}"
               Margin="0,5,0,10"/>

        <!-- 📋 Список должностей -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="5"
                Effect="{StaticResource CardShadow}"
                Margin="0,0,0,10">
            <ListView x:Name="lvRole"
                      ItemsSource="{Binding ListRole}"
                      SelectedItem="{Binding SelectedRole}"
                      BorderThickness="0"
                      Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Код" Width="80" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Наименование должности" Width="280" DisplayMemberBinding="{Binding NameRole}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- 🔘 Панель кнопок -->
        <Border Grid.Row="2"
                CornerRadius="8"
                Background="{StaticResource PrimaryBrush}"
                Padding="8"
                Effect="{StaticResource MenuShadow}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Добавить" Command="{Binding AddRole}" Width="110"/>
                <Button Content="Редактировать" Command="{Binding EditRole}" Width="120"/>
                <Button Content="Удалить" Command="{Binding DeleteRole}" Width="110"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>